<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewNameSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Маршрут: не установлен"/>

    <Button
        android:id="@+id/buttonSetPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set path" /> <!-- Уберите android:enabled="false" -->

    <Button
        android:id="@+id/buttonCallTaxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Taxi"
        android:enabled="false"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="490dp"
        android:layout_marginBottom="14dp"
        android:text="@string/author" />
</LinearLayout>